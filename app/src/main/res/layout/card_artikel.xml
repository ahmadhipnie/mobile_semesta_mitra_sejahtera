<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:background="@drawable/bg_card"
    app:cardCornerRadius="20dp"
    android:id="@+id/cvArtikel"
    android:elevation="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="20dp">
                <ImageView
                    android:id="@+id/img_artikel"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/bg_card"
                    android:src="@drawable/artikel_kategori_pakan"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_judul_artikel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pakan yang bagus agar kualitas telur meningkat"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:layout_marginVertical="5dp"
                    android:layout_marginLeft="18dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_deksripsi_artikel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="agar kualitas telur meningkat makan harus diberi pakan dari bahan"
                        android:maxLines="2"
                        android:textColor="@color/black"
                        android:layout_marginLeft="18dp"
                        android:fontFamily="@font/poppins"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/btn_lihat_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/rounded_editext"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="end"
                android:paddingHorizontal="20dp"
                android:text="Lihat Selengkapnya"
                android:textColor="@color/tema"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>