<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_jadwal_panen"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:background="@drawable/bg_card"
    app:cardCornerRadius="20dp"
    android:elevation="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="20dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/bg_card"
                    android:src="@drawable/truk_ayam"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Panen : "
                    android:fontFamily="@font/poppins"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="18dp"/>
                <TextView
                    android:id="@+id/txt_tanggal_jadwal_panen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19 - 10 - 2023"
                    android:textColor="@color/kedua"
                    android:layout_marginLeft="18dp"
                    android:fontFamily="@font/poppins_semibold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jumlah ayam : "
                    android:textColor="@color/black"
                    android:layout_marginLeft="18dp"
                    android:fontFamily="@font/poppins"/>
                <TextView
                    android:id="@+id/txt_jumlah_ayam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300 ekor"
                    android:textColor="@color/kedua"
                    android:layout_marginLeft="18dp"
                    android:fontFamily="@font/poppins_semibold"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_id_jadwal_panen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:fontFamily="@font/poppins_medium"
                android:layout_gravity="center"
                android:gravity="end"
                android:text="ID 00019102023"/>
            <TextView
                android:id="@+id/btn_lihat_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Lihat Detail"
                android:paddingHorizontal="20dp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/tema"
                android:textSize="15sp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>